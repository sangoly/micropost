<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
  	<section>
  	  <%= gravatar_for @user %>
  	  <h1><%= @user.name %></h1>
  	  <span><%= link_to 'View my profile', @user %></span>
  	  <span><b>Microposts:</b><%= @user.microposts.count %></span>
  	</section>
  	<section>
  	  <%= render "shared/stat" %>
  	  <% if @users.any? %>
  	    <div class="user_avatars">
		  <% @users.each do |user| %>
		    <%= link_to gravatar_for(user, size: 15), user %>
		  <% end %>
  	    </div>
  	  <% end %>
  	</section>
  </aside>
  <div class="col-md-8">
  	<h3><%= @title %></h3>
  	<% if @users.any? %>
  	  <ul class="users">
  	    <%= render @users %>
  	  </ul>
  	  <div class="digg_pagination">
  		<%= will_paginate(@users, :renderer => WillPaginate::ActionView::LinkRenderer) %>
	  </div>
  	<% end %>
  </div>
</div>